---
import { gapClasses, type GapValue } from "@utils/spacing";

interface Props {
  Element?: keyof HTMLElementTagNameMap;
  class?: string;
  gap?: GapValue;
  align?: "vertical" | "horizontal";
  [key: string]: any;
}

const {
  Element = "div",
  class: className,
  align = "vertical",
  gap,
  ...rest
} = Astro.props as Props;

// クラスを生成
const classList = ["stack", align, gapClasses(gap), className];
---

<Element class:list={classList} {...rest}>
  <slot />
</Element>

<style lang="scss">
  .stack {
    // デフォルト
    --gap: 0;

    display: grid;
    gap: var(--gap);
  }

  @include spacing(g, gap);

  .vertical {
    align-content: start;
  }

  .horizontal {
    grid-auto-flow: column;
    justify-content: start;
  }
</style>
