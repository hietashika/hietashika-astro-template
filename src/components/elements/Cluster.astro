---
import { gapClasses, type GapValue } from "@utils/spacing";

interface Props {
  Element?: keyof HTMLElementTagNameMap;
  class?: string;
  gap?: GapValue;

  // 配置
  align?: "end" | "center";
  justify?: "end" | "center" | "between" | "around";
  content?: "end" | "center";

  // ユーティリティ
  [key: string]: unknown;
}

const {
  Element = "div",
  class: className,
  gap,
  align,
  justify,
  content,
  ...rest
} = Astro.props as Props;

const classList = [
  "cluster",
  gapClasses(gap),
  align ? `a--${align}` : "",
  justify ? `j--${justify}` : "",
  content ? `c--${content}` : "",
  className,
];
---

<Element class:list={classList} {...rest}>
  <slot />
</Element>

<style lang="scss">
  .cluster {
    // デフォルト
    --content: flex-start;
    --justify: flex-start;
    --align: flex-start;
    --row-gap: 0;
    --column-gap: 0;

    display: flex;
    flex-wrap: wrap;
    gap: var(--row-gap) var(--column-gap);
    place-content: var(--content) var(--justify);
    align-items: var(--align);
  }

  @include sh(rg, cg);

  .c {
    &--end {
      --content: flex-end;
    }

    &--center {
      --content: center;
    }
  }

  .a {
    &--end {
      --align: flex-end;
    }

    &--center {
      --align: center;
    }
  }

  .j {
    &--end {
      --justify: flex-end;
    }

    &--center {
      --justify: center;
    }

    &--between {
      --justify: space-between;
    }

    &--around {
      --justify: space-around;
    }
  }
</style>
