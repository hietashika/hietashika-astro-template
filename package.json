{
  "name": "astro-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "npm run _lint && npm run _lint-fix && npm run _format-fix",
    "_lint": "biome check . && stylelint \"**/*.{astro,css}\"",
    "_lint-fix": "biome check --write . && stylelint --fix \"**/*.{astro,css}\"",
    "_format": "prettier --check \"**/*.{html,astro,css}\"",
    "_format-fix": "prettier --write \"**/*.{html,astro,css}\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.1",
    "astro": "^5.5.4",
    "fs-extra": "^11.3.0",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playform/compress": "^0.1.7",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sass-embedded": "^1.86.0",
    "stylelint": "^16.16.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4"
  }
}
